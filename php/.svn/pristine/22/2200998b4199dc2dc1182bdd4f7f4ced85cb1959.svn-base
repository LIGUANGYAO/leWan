    /**
     * 获取省份列表
     */
    protected function getProvenceList($status=0) {
        $map['parentid'] = 100000;
        if($status > 0){
            $map['status'] = $status;
        }
        return Db::name('region')->field('`name` as provence, id as `code`')->where($map)->order('id asc')->select();
    }

