    /**
     * 新人直卖第一单活动
     * @param $userid  直卖人UID
     * @param $ulevel  下单用户等级
     * @return bool
     */
    public static function firstOrderDirectSelling($userid,$ulevel){
        if($userid){
            $hasmap[]=  array('exp',"p.product_returnall=0 and ((o.user_id!=p.userid_first and p.userid_first ={$userid})
             or (o.user_id=p.userid_first and p.userid_second={$userid}))");
            $ocount = Db::name('order_product p')->join('order o','o.order_id=p.order_id','left')
                ->where($hasmap)->count();
            GLog('新人直卖活动,当前时间:',time());
            if($ocount==1){ //直卖只有一单。
                //防止重复插入数据
                $hasdata = Db::table('view_xinrenzhimai')->where(['user_id'=>$userid])->count();
                if($hasdata){
                    GLog('新人直卖活动,已参加过（'.$hasdata.'）',1);
                    return true;
                }else{
                    $data['user_id'] = $userid;
                    $data['uptime'] = time();
                    $data['firsttime'] = time();
                    if(Db::table('view_xinrenzhimai')->insert($data)){
                        return true;
                    }else{
                        GLog('新人直卖活动,插入数据失败',Db::table('view_xinrenzhimai')->getLastSql());
                    }
                }

            }
        }
        return false;
    }
