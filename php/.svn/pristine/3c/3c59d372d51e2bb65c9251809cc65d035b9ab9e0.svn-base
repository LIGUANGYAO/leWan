		<script type="text/javascript">
			$(function() {
				mui.init({
				    gestureConfig: {
				        longtap: true
				    }
				});
				
				var code = getUrlParam("code");
				var token = localStorage.getItem("token");
				var productId = getUrlParam("productId"); //商品id
				if(getUrlParam("recode")) {
					localStorage.setItem("recode", getUrlParam("recode"))
				}
				var recode = localStorage.getItem("recode");
				
				
				var latitude = localStorage.getItem("latitude") || 30.65618; //纬度
				var longitude = localStorage.getItem("longitude") || 104.08329; //经度
				var provincecode = localStorage.getItem("provincecode") || 510000; //省code
				var citycode = localStorage.getItem("citycode") || 510100; //市code
				
				
				if(token){
					$.ajax({
						url: API_SERVER + 'Wechat/hasToken',
						async: false,
						data:{token:token},
						success: function (data){
							if(data.code == 200) {
								log(data)
								if(data.data.count == 0){
									localStorage.setItem("token","")
									window.location.href = location.href;
								}
							}
						}
					});
				}
				//获取code
				if(token == 'undefined' || token == null || token == "") {
					if(code == 'undefined' || code == null || code == "") {
						var redirectUrl = location.href
						window.location.replace('https://open.weixin.qq.com/connect/oauth2/authorize?appid='+APPID+'&redirect_uri=' + redirectUrl + '&response_type=code&scope=snsapi_userinfo&state=STATE#wechat_redirect')
					} else {
						//获取token
						$.ajax({
							url: API_SERVER + "Wechat/WechatAuthorize",
							async: false,
							data: {
								code: code + "&state",
								recode: localStorage.getItem("recode") || null,	//用户邀请码
							},
							success: function(data) {
								log(data)
								if(data.code == 200) {
									token = data.data.token
									localStorage.setItem("token", data.data.token);	//token
									localStorage.setItem("level", data.data.level);	//用户等级==》1=普通用户；2超级达人；3营销达人；4=运营达人；5=玩主
								} else {
									mui.toast(data.message)
								}
							}
						})
					}
				}
				
				
				var floatWindowTop;	//选项距离顶部高度
				/*======================================================*/
				var vueData = {
					showPage: false,
					proDetail: {}, //商品详情
					proPrice: [], //商品规格
					lat: 30.65618,
					lng: 104.08329, 
					merchant_ssq: '四川省',
					address: '琉璃路',
					priceIndex: 0,	//默认选中第一个
					proHotpush: [], //热推商品
					level: 1,	//用户等级
					isNewPerson: 2,	//是否是免单产品   1是    2不是
					freesheet: 2,	//用户是否已使用免单 1未使用 2已使用
					parDetailsImg:'',	//商品详情图文介绍
					pageRefresh: true,	//页面数据变化
				};
				
				var pageUpdate = 0;
				new Vue({
					el: '#J_el',
					data: vueData,
					methods: {
						selMerchant: selMerchant,  //地图选择
						getSignature: getSignature, //地图查看
						jumpToHomePage: jumpToHomePage, //跳转首页
						ContactMerchant: ContactMerchant, //联系商家
						shareProduct: shareProduct, //分享商品
						selGuige:selGuige,	//选中规格
						callPhone: callPhone, //拨打电话
						BuyNow: BuyNow, //立刻购买
						countdown:countdown,	//倒计时
						jumpToDetails: jumpToDetails,	//商品详情跳转
						handleScroll: handleScroll,	//页面滚动
						goToDownLoad: goToDownLoad,	//下载app
						closeDownLoad: closeDownLoad, //关闭下载按钮
					},
					mounted: function() {
						window.addEventListener('scroll', this.handleScroll); //页面滚动监听事件
						var _that = this;
						this.$watch("proDetail", function() {
							_that.countdown(vueData.proDetail.product_starttime,vueData.proDetail.product_endtime);
						})
						this.$watch("pageRefresh", function() {
							$('.downBtnTwo').html('分享');
						})
					},
					updated: function() {
						floatWindowTop = ($('.details').offset().top);
						if(pageUpdate == 0){
							/*初始化轮播*/
							mui('.mui-slider').slider({
								interval: 2000 //自动播放周期
							});
							//商品推荐更多
							var swiper = new Swiper('.swiper-container', {
								pagination: {
									el: '.swiper-pagination',
								},
							});
						}
						pageUpdate++;
					}
				});
				Vue.use(VueLazyload, {
				  preLoad: 1.3,
				  error: '../../img/vueLazyLoad.png',
				  loading: '../../img/vueLazyLoad.png',
				  attempt: 1,
//				  listenEvents: ['scroll', 'wheel', 'mousewheel', 'resize', 'animationend', 'transitionend']
				  listenEvents: ['scroll' , 'animationend', 'transitionend']
				})
				//规格变化
				function selGuige(index){
					vueData.priceIndex = index;
				}
				//获取个人信息
				detailsGetUserMessage();
				var myRecode;
				function detailsGetUserMessage(){
					$.ajax({
						url: API_SERVER + 'User/UserPersonal',
						async: false,
						data:{token: token},
						success: function(data) {
							if(data.code == 200) {
								log(data)
								myRecode = data.data.recode;
								vueData.level = data.data.level;
							}
						}
					});
				}
				//锁粉
				if(localStorage.getItem("recode") && token){
					suofen()
					function suofen(){
						$.ajax({
							url: API_SERVER + 'User/UserLockPowder',
							async: false,
							data:{
								token: token,
								recode: localStorage.getItem("recode")
							},
							success: function(data) {
								log(data)
							}
						});
					}
				}
				//获取商品详情
				getProductDetails();
				function getProductDetails() {
					var data = {
						token: token?token:null,
						type: 2, // 1未定位 2已定位
						pr_id: productId,
						lat: latitude,
						lng: longitude
					};
					$.ajax({
						url: API_SERVER + 'Product/ProductDetails',
						async: true,
						headers: {
							"product": "wechat",
							"platform": browserType, //sreverApi里面设置了全局变量
							"provincecode": provincecode,
							"citycode": citycode
						},
						data: data,
						success: function(data) {
							log(data)
							if(data.code == 200) {
								vueData.proDetail = data.data.details;
								vueData.proPrice = data.data.price;
								vueData.proHotpush = data.data.hotpush;
								vueData.isNewPerson = data.data.details.product_returnall || 2;
								vueData.showPage = true;
								
								vueData.lat = data.data.details.shop[0].merchant_lat;
								vueData.lng = data.data.details.shop[0].merchant_lng;
								vueData.merchant_ssq = data.data.details.shop[0].merchant_ssq;
								vueData.address = data.data.details.shop[0].merchant_address;
								
								vueData.freesheet = data.data.details.freesheet;
								vueData.parDetailsImg = data.data.details.product_description.replace(/src/g,"data-src")
								sharePYQ();
							}
						}
					});
				}

				//首页
				function jumpToHomePage() {
					mui.openWindow({
						url: "homePage.html"
					})
				}
				//联系商家
				function ContactMerchant(){
					$('.modalBox4').show();
				}
				//拨打电话
				function callPhone(phone){
					window.location.href = 'tel://' + phone;
				}
				mui('body').on('tap', '.modalBox4', function() { //商家电话模态窗
					$('.modalBox4').hide();
				})
				mui('body').on('tap', '.modalCard4', function(event) { //商家电话模态窗冒泡
					event.stopPropagation();
				})
				//立刻购买
				function BuyNow(productId,priceId) {
					if ($('#modal').hasClass("mui-active")) {
						if (vueData.isNewPerson == 2) {		  //新人免单产品   1是    2不是
							mui.openWindow({
								url: "OrderPayment.html?productId="+productId+"&priceId="+priceId
							})
						} else if(vueData.isNewPerson == 1){	//新人免单产品   1是    2不是
							if (vueData.level != 1) {  //用户等级 1为普通用户
								if (vueData.freesheet == 1) {  // 1未使用 2已使用
									mui.openWindow({
										url: "OrderPayment.html?productId="+productId+"&priceId="+priceId
									})
								} else if(vueData.freesheet == 2){  // 1未使用 2已使用
									mui.toast("您已使用过免单机会，去邀请更多好友进行注册！免费送他一份吃喝玩乐，你省他也赚！")
								}
							} else{
								mui.toast("您还未注册，暂不能享受免单机会，去找邀请码进行注册！")
							}
						}
					} else{
						log("弹起模态窗")
					}
				}
				//分享商品
				function shareProduct(title, url, imgUrl) {
					$(".modalBox").css("display",'block');
				}
				//关闭模态窗
				mui('body').on('tap',".modalBox",function(){
					$(".modalBox").css("display",'none')
				})
				
				//生成链接
				mui('body').on('tap',".createUrl",function(){
					$(".modalBox1").css("display",'block')
				})
